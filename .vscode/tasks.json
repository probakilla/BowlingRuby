  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run unit tests",
      "type": "shell",
      "command": "ruby",
      "args": [
        "tests/test_suite_runner.rb"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run program",
      "type": "shell",
      "command": "ruby",
      "args": [
        "src/game.rb"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}